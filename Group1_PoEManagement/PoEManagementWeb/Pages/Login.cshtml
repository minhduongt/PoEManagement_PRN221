@page
@model LoginModel
@{
    ViewData["Title"] = "Login page";
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header" style="font-size: 2em;">
                    Login
                    @ViewBag.Message
                </div>

                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Account.Email" class="control-label"></label>
                            <input type="email" asp-for="Account.Email" value="@TempData["InputEmail"]" class="form-control" />
                            <span asp-validation-for="Account.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Account.Password" class="control-label"></label>
                            <input type="password" asp-for="Account.Password" class="form-control" />
                            <span asp-validation-for="Account.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary" />
                            <input type="reset" value="Reset" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
                <div style="text-align: center">
                    <a style="padding-right: 2em; color:red">@TempData["Error"]</a>
                    <a asp-page="/Register">No account?</a>
                </div>
            </div>
        </div>
    </div>

</body>

</html>