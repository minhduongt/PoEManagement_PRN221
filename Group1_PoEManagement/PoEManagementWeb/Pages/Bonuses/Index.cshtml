@page
@model PoEManagementWeb.Pages.Bonuses.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Bonuses</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bonus[0].BonusMoney)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bonus[0].Month)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bonus[0].Fine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bonus[0].Deleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bonus[0].Employee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bonus) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BonusMoney)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Month)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
