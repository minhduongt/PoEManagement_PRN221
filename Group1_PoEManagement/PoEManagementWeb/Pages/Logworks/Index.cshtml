@model PoEManagementWeb.Pages.Logworks.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LogWork[0].WorkingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogWork[0].WorkingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogWork[0].Deleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogWork[0].Employee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LogWork) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
