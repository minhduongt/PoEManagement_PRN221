@page
@model PoEManagementWeb.Pages.RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
}

<h1>Register</h1>

<h4>New Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span  class="text-danger">@TempData["Error"]</span>
            <div class="form-group">
                <input asp-for="Account.Id" value="@TempData["Id"]" class="form-control" hidden />
                <span asp-validation-for="Account.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account." class="control-label"></label>
                <input type="email" asp-for="Account.Email" class="form-control" />
                <span asp-validation-for="Account.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Password" class="control-label"></label>
                <input type="password" asp-for="Account.Password" class="form-control" />
                <span asp-validation-for="Account.Password" class="text-danger"></span>
            </div>        
            <div class="form-group">
                <label asp-for="Account.IdNavigation" class="control-label"></label>
                <input asp-for="Account.IdNavigation" class="form-control" />
                <span asp-validation-for="Account.IdNavigation" class="text-danger"></span>
            </div>
           

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Login">Back to Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
